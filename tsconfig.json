{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@middleware/*": ["./middleware/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@config/*": ["./config/*"]
    },
    "types": [
      "node",
      "express",
      "mongoose",
      "jsonwebtoken",
      "nodemailer",
      "express-validator"
      // Add any other global types or library types that consistently throw TS2307
    ]
  },
  "include": [
    // This is broad. If server.ts is in the root, it will be included.
    // If your main code is in a 'src' folder, you might change rootDir and include: ["src/**/*.ts"]
    "**/*.ts" // This covers "*.ts" and "controllers/*.ts" implicitly
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}